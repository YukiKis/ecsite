<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h2 class="deliveries-heading">配送先登録/一覧</h2>
    <div class="error-explanation">
      <%= render "layouts/error", resource: @delivery_new %>
    </div>
    <%= form_with model: @delivery_new, local: true do |f| %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.label "郵便番号(ハイフンなし)", for: "delivery_postcode", class: "control-label" %>
        </div>
        <div class="col-sm-3 form-group">
          <%= f.text_field :postcode, class: "form-control" %>
        </div>
        <div class="col-sm-6"></div>
      </div>
      <div class="row">
        <div class="col-sm-3">
          <%= f.label "住所", for: "delivery_address", class: "control-label" %>
        </div>
        <div class="col-sm-6 form-group">
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="col-sm-3"></div>
      </div>
      <div class="row">
        <div class="col-sm-3">
          <%= f.label "宛名", for: "delivery_name", class: "control-label" %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="col-sm-3 col-sm-offset-3">
          <%= f.submit "登録する", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
    <br>
    <table class="delivery-table table table-hover table-bordered">
      <thead class="row">
        <th class="col-sm-2">郵便番号</th><th class="col-sm-4">住所</th><th class="col-sm-2">宛名</th><th class="col-sm-4"></th>
      </thead>
      <% if @deliveries.any? %>
        <tbody>
          <% @deliveries.each do |delivery| %>
            <tr>
              <td><%= delivery.postcode %></td>
              <td><%= delivery.address %></td>
              <td><%= delivery.name %></td>
              <td><%= link_to "編集する", edit_delivery_path(delivery), class: "btn btn-primary" %>&nbsp;
                <%= link_to "削除する", delivery_path(delivery), method: :delete, data: { confirm: "本当によろしいですか？" }, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
</div>