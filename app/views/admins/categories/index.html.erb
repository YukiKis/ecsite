<div class="row">
  <div class="col-sm-8">
    <h4>ジャンル一覧・追加</h4>
    <%= form_with model: @category_new, url: admins_categories_path, local: true do |f| %>
      <div class="form-group form-inline">
        <%= f.label :name, "ジャンル", class: "control-label" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.radio_button :is_active, :true, class: "form-control" %>
        <%= f.label :is_active_true, "有効", class: "control-label" %>
        <%= f.radio_button :is_active, :false, class: "form-control" %>
        <%= f.label :is_active_fales, "無効", class: "control-label" %>
        <%= f.submit "追加", class: "btn btn-primary" %>
      </div>
    <% end %>
    <table class="table">
      <thead class="row">
        <th class="col-sm-4">ジャンル</th>
        <th class="col-sm-2">状態</th>
        <th class="col-sm-6"></th>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.status %></td>
            <td><%= link_to "編集する", edit_admins_category_path(category), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-sm-4"></div>
</div>