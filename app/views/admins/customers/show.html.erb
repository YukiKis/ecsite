<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報</h2>
    <div class="row">
      <div class="col-sm-8">
        <div class="row">
          <div class="col-sm-2">顧客ID</div>
          <div class="col-sm-10"><%= @customer.id %><span><%= @customer.status %></span></div>
        </div>
        <div class="row">
          <div class="col-sm-2">氏名</div>
          <div class="col-sm-10"><%= @customer.last_name %> <%= @customer.first_name %></div>
        </div>
        <div class="row">
          <div class="col-sm-2">フリガナ</div>
          <div class="col-sm-10"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></div>
        </div>
        <div class="row">
          <div class="col-sm-2">郵便番号</div>
          <div class="col-sm-10"><%= @customer.postcode %></div>
        </div>
        <div class="row">
          <div class="col-sm-2">住所</div>
          <div class="col-sm-10"><%= @customer.address %></div>
        </div>
        <div class="row">
          <div class="col-sm-2">電話番号</div>
          <div class="col-sm-10"><%= @customer.tel %></div>
        </div>
        <div class="row">
          <div class="col-sm-2">メールアドレス</div>
          <div class="col-sm-10"><%= @customer.email %></div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <%= link_to "編集する", edit_admins_customer_path(@customer), class: "btn btn-primary" %>
            <%#= link_to "注文履歴一覧を見る", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
      <div class="col-sm-4"></div>
    </div>
    
  </div>
</div>