<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h2>新規会員登録</h2>    
    <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <div class="error-message">
      <%= render "customers/shared/error_messages", resource: resource %>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <%= f.label "名前", for: "customer_last_name", class: "control-label" %>
      </div>
      <div class="col-sm-5">
        <%= f.label "(姓)", for: "customer_last_name", class: "control-label" %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="col-sm-5">
        <%= f.label "(名)", for: "customer_first_name", class: "control-label" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-2">
        <%= f.label "フリガナ", for: "customer_last_name_kana", class: "control-label" %>
      </div>
      <div class="col-sm-5">
        <%= f.label "(セイ)", for: "customer_last_name_kana", class: "control-label" %>
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>
      <div class="col-sm-5">
        <%= f.label "(メイ)", for: "customer_first_name_kana", class: "control-label" %>
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-2">
        <%= f.label "メールアドレス", for: "customer_email", class: "control-label" %>
      </div>
      <div class="col-sm-5">
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="col-sm-5">
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-2">
        <%= f.label "郵便番号(ハイフンなし)", for: "customer_email", class: "control-label" %>
      </div>
      <div class="col-sm-5">
        <%= f.text_field :postcode, class: "form-control" %>
      </div>
      <div class="col-sm-5">
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-2">
        <%= f.label "住所", for: "customer_address", class: "control-label" %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-2">
        <%= f.label "電話番号(ハイフンなし)", for: "customer_tel", class: "control-label" %>
      </div>
      <div class="col-sm-5">
        <%= f.text_field :tel, class: "form-control" %>
      </div>
      <div class="col-sm-5">
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-2">
        <%= f.label "パスワード(6文字以上)", for: "customer_password", class: "control-label" %>
      </div>
      <div class="col-sm-5">
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="col-sm-5">
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-2">
        <%= f.label "パスワード(確認用)", for: "customer_password_confirmation", class: "control-label" %>
      </div>
      <div class="col-sm-5">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <div class="col-sm-5">
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-12 text-center">
        <%= f.submit "新規登録", class: "register-btn" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h2>既に登録済みの方</h2>
    <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
  </div>
</div>


<%= render "customers/shared/links" %>
