<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h2>商品説明</h2>
    <div class="clearfix">
      <%= link_to "+", new_admins_item_path, class: "btn btn-default btn-rounded pull-right" %>
    </div>
    <table class="table table-hover">
      <thead class="row">
        <th class="col-sm-1">商品ID</th>
        <th class="col-sm-4">商品名</th>
        <th class="col-sm-1">税抜価格</th>
        <th class="col-sm-4">ジャンル</th>
        <th class="col-sm-2">ステータス</th>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admins_item_path(item) %> </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.category.name %></td>
            <td><%= item.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>