<div class="row">
  <div class="col-sm-10">
    <h2>注文履歴一覧</h2>
    <table class="table table-hover">
      <thead class="row">
        <th class="col-sm-3">購入日時</th>
        <th class="col-sm-3">購入者</th>
        <th class="col-sm-3">注文個数</th>
        <th class="col-sm-3">注文ステータス</th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admins_order_path(order) %></td>
            <td><%= full_name(order.customer)%></td>
            <td><%= order.order_items.count %></td>
            <td><%= order.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>