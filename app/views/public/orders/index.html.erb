<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h2>注文履歴一覧</h2>
    <table class="table table-hover table-bordered">
      <thead class="row">
        <th class="col-sm-2">注文日</th>
        <th class="col-sm-5">配送先</th>
        <th class="col-sm-2">注文商品</th>
        <th class="col-sm-1">支払金額</th>
        <th class="col-sm-2">ステータス</th>
        <th class="col-sm-2">注文履歴</th>
      </thead>
      <tbody>
        <% current_customer.orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              <%= order.postcode %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_items.each do |order_item| %>
                <%= order_item.item.name %>
              <% end %>
            </td>
            <td>
              <%= order.total_price %>
            </td>
            <td><%= order.status %></td>
            <td><%= link_to "表示する", order_path(order) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>