<div class="row">
  <div class="col-sm-10">
    <h4>ジャンル編集</h4>
    <%= form_with model: @category, url: admins_category_path(@category), local: true do |f| %>
      <div class="form-group form-inline">
        <%= f.label :name, "ジャンル", class: "control-label" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.radio_button :is_active, :true, class: "form-conterol" %>
        <%= f.label :is_active_true, "有効", class: "control-label" %>
        <%= f.radio_button :is_active, :false, class: "form-control" %>
        <%= f.label :is_active_false, "無効", class: "control-label" %>
        <%= f.submit "変更を保存する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>