<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2 class="edit-customer-header">登録情報編集</h2>
    <div class="error-explanation">
      <%= render "layouts/error", resource: @customer %>
    </div>
    <%= form_with model: @customer, local: true do |f| %>
      <div class="row">
        <div class="col-md-4">
          <%= f.label "名前", for: "customer_last_name", class: "control-label" %>
        </div>
        <div class="col-md-4 form-group form-inline relative">
          <%= f.label "(姓)", for: "customer_last_name", class: "control-label label-abs1" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="col-md-4 form-group form-inline relative">
          <%= f.label "(名)", for: "customer_first_name", class: "control-label  label-abs1" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.label "フリガナ", for: "customer_last_name_kana", class: "control-label" %>
        </div>
        <div class="col-md-4 form-group form-inline relative">
          <%= f.label "(セイ)", for: "customer_last_name_kana", class: "control-label  label-abs2" %>
          <%= f.text_field :last_name_kana, class: "form-control" %>
        </div>
        <div class=" col-md-4 form-group form-inline relative">
          <%= f.label "(メイ)", for: "customer_first_name_kana", class: "control-label label-abs2" %>
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.label "メールアドレス", for: "customer_email", class: "control-label" %>
        </div>
        <div class="col-md-4 form-group form-inline">
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="col-md-4"></div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.label "郵便番号(ハイフンなし)", for: "customer_postcode", class: "control-label" %>
        </div>
        <div class="col-md-4 form-group form-inline">
          <%= f.text_field :postcode, class: "form-control" %>
        </div>
        <div class="col-md-4"></div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.label "住所", for: "customer_address", class: "control-label" %>
        </div>
        <div class="col-md-8 form-group ">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.label "電話番号(ハイフンなし)", for: "customer_tel", class: "control-label" %>
        </div>
        <div class="col-md-4 form-group form-inline">
          <%= f.text_field :tel, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-offset-2 flex-between" style="margin-top: 15px;">
            <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
            <%= link_to "退会する", quit_customer_path, class: "btn btn-danger" %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>