<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      <div class="col-sm-8">
        <h2>注文履歴詳細</h2>
        <section>
          <h6>注文情報</h6>
          <table class="table table-hover table-bordered">
            <tr><th>注文日</th><td><%= @order.created_at.strftime("%Y/%m/%d") %></td></tr>
            <tr><th>配送先</th><td>
              <%= @order.postcode %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td></tr>
            <tr><th>支払方法</th><td><%= @order.payment %></td></tr>
            <tr><th>ステータス</th><td><%= @order.status %></td></tr>
          </table>
        </section>
      </div>
      <div class="col-sm-4">
        <section>
          <h6>請求情報</h6>
          <table class="table table-hover table-bordered">
            <tr><th>商品合計</th><%= @order.subtotal_price %></tr>
            <tr><th>配送料</th><td><%= @order.shipment %></td></tr>
            <tr><th><b>ご請求額</b></th><td><%= @order.total_price %></td></tr>
          </table>
        </section>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10">
        <table class="table table-hover table-bordered">
          <thead class="row">
            <th class="col-sm-8">商品</th>
            <th class="col-sm-2">単価(税込)</th>
            <th class="col-sm-1">個数</th></th>
            <th class="col-sm-1">小計</th>
          </thead>
          <tbody>
            <% @order.order_items.each do |order_item| %>
              <tr>
                <td><%= order_item.item.name %></td>
                <td><%= order_item.item.price_with_tax %></td>
                <td><%= order_item.amount %></td>
                <td><%= order_item.subtotal %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-sm-2"></div>
    </div>
  </div>
</div>