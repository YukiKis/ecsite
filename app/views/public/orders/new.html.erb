<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h2>注文情報入力</h2>
    <%= form_with scope: :info, url: check_orders_path, local: true do |f| %>
      <section class="form-group form-inline">
        <h4>支払方法</h4>
        <%= f.radio_button :payment, "0", checked: true, class: "form-control checked"%>
        <%= f.label :payment_0, "クレジットカード", class: "control-label" %>
        <br>
        <%= f.radio_button :payment, "1", class: "form-control" %>
        <%= f.label :payment_1, "銀行振込", class: "control-label" %>
      </section>
      <section class="form-group form-inline">
        <h4>お届け先</h4>
        <%= f.radio_button :address, :own_address, checked: true, class: "form-control" %>
        <%= f.label :address_own_address, "ご自身の住所" %>
        <br>
        <%= f.radio_button :address, :registered_address, class: "form-control" %>
        <%= f.label :address_registered_address, "登録済みの住所から選択", class: "control-label" %>
        <br>
        <%= f.select :registered_address, current_customer.deliveries.all.map { |delivery| "#{ delivery.postcode } #{ delivery.address } #{ delivery.name }" }, {}, { class: "form-control" } %>
        <br>
        <%= f.radio_button :address, :new_address, class: "form-control" %>
        <%= f.label :address_new_address, "新しい届け先", class: "control-label" %>
        <br>
        <%= f.label :new_address_postcode, "郵便番号(ハイフンなし)", class: "control-label"%>
        <%= f.text_field :new_address_postcode, class: "form-control" %>
        <br>
        <%= f.label :new_address_address, "住所", class: "control-label" %>
        <%= f.text_field :new_address_address, class: "form-control" %>
        <br>
        <%= f.label :new_address_name, "宛名", class: "control-label" %>
        <%= f.text_field :new_address_name, class: "form-control" %>
      </section>
      <div class="submit-btn">
        <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>