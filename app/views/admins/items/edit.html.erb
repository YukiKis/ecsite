<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h4>商品編集</h4>
    <%= form_with model: @item, url: admins_item_path(@item), local: true do |f| %>
      <div class="row">
        <div class="col-sm-4">
          <%= attachment_image_tag @item, :image %>
          <%= f.attachment_field :image %>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :name, "商品名", class: "control-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :description, "商品説明", class: "control-label" %>
            <%= f.text_area :description, rows: 3, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :category, "ジャンル", class: "control-label" %>
            <%= f.select :category_id, @categories, { include_blank: "-選択してください-" }, { class: "form-control" } %>
          </div>
          <div class="form-group">
            <%= f.label :price, "税抜価格", class: "control-label" %>
            <%= f.text_field :price, class: "form-control" %>
          </div>
            <div class="form-group">
            <%= f.label :is_active, "販売ステータス", class: "control-label" %>
            <%= f.select :is_active, { "有効": true, "無効": false }, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-10 clearfix">
          <%= f.submit "変更を保存",  class: "btn btn-primary pull-right" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>